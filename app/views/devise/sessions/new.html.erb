<h2>Zaloguj się</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


  <div class="border p-4 mb-4">
    <div class="form-group row col-sm-10">
      <%= f.text_field :login, autofocus: true, autocomplete: "login", class: "form-control", placeholder: "Nazwa Użytkownika lub email" %>
    </div>
    <div class="form-group row col-sm-10">
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: "Hasło" %>
    </div>
    <div class="form-group form-check">
      <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me, class:'form-check-input' %>
        <%= f.label :remember_me, "Zapamiętaj mnie!", class:'form-check-label' %>
      <% end %>
    </div>
  </div>
  
  <%= f.submit "Zaloguj", class: 'btn btn-outline-primary' %>
<% end %>

<%= render "devise/shared/links" %>
