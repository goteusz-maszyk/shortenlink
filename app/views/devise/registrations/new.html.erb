<h2>Zarejestruj się</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="border p-4 mb-4">
    <div class="form-group row col-sm-10">
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control", placeholder: "Nazwa Użytkownika" %>
    </div>
    <div class="form-group row col-sm-10">
      <%= f.email_field :email, autocomplete: "email", class: 'form-control', placeholder: "E-mail" %>
    </div>
    <div class="form-group row col-sm-10">
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: "Hasło - min. 6 znaków" %>
    </div>
    <div class="form-group row col-sm-10">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: "Powtórz Hasło" %>
    </div>
  </div>
  
  <%= f.submit "Zarejestruj się", class: 'btn btn-outline-primary' %>
<% end %>

<%= render "devise/shared/links" %>
