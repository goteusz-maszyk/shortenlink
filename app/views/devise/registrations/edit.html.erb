<h4>Edytuj konto</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="border p-4 mb-4">
    <div class="form-group row col-sm-10">
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control", placeholder: "Nazwa Użytkownika" %>
    </div>

    <div class="form-group row col-sm-10">
      <%= f.text_field :email, autocomplete: "email", class: "form-control", placeholder: "E-Mail" %>
    </div>

    <div class="form-group row col-sm-10">
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "Aktualne hasło" %>
    </div>

    <div class="form-group row col-sm-10">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Nowe hasło (zostaw puste, gdy nie chcesz go zmieniać)"  %>
      <% if @minimum_password_length %>
        <br />
        <em>minimum <%= @minimum_password_length %> znaków</em>
      <% end %>
    </div>

    <div class="form-group row col-sm-10">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Potwierdź nowe hasło" %>
    </div>
  </div>

  <%= f.submit "Zapisz", class: "btn btn-outline-primary" %>
<% end %>

<h3>Usuń moje konto</h3>
<%= link_to 'Usuń konto', '', class: "btn btn-outline-danger", data: { toggle: 'modal', target: '#del-account', href: cancel_user_registration_path } %>

<%= render partial: "/shared/modal", locals: {method: "delete", modal_id: "del-account", title: "Na pewno?", body: "Wszystkie linki, które do tej pory skróciłeś zostaną usunięte.", href: user_registration_path} %>
